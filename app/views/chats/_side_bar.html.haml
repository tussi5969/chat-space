.user
  .user__name
    = current_user.name
    = link_to new_group_path do
      = fa_icon 'pencil-square-o', class: "user__name--icon"
    = link_to edit_user_path(current_user) do
      = fa_icon 'cog', class: "user__name--icon"
  .user__groups
    - current_user.groups.each do |group|
      .user__groups__group
        = link_to group_chats_path(group) do
          .user__groups__group__name
            = group.name
          .user__groups__group__chat
            メッセージはまだありません。
    -# = render partial: "user", locals: {name: "example", chat: "まだメッセージがありません"}
